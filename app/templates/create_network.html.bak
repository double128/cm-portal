{% extends "base.html" %}

{% block head %}
{% include 'scripts.html' %}
{% endblock %}

{% block content %}
    <h1>Create Networks</h1>
    <form action="" method="post" id="form">
        {{ form.hidden_tag() }}
        <p>
            {{ form.network_name.label }}<br>
            {{ form.network_name }}<br>
            {% for error in form.network_name.errors %}
            <span style="color: red;">[{{ error }}]</span>
            {% endfor %}
        </p>
        <p>
            {{ form.network_address.label }}<br>
            {{ form.network_address }} /24<br>
            {% for error in form.network_address.errors %}
            <span style="color:red;">[{{ error }}]</span>
            {% endfor %}
        </p>
        <div id="fun_stuff" style="overflow:auto;">
            {{ form.submit() }}
        </div>
    </form>
{% endblock %}

